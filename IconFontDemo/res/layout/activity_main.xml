<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/de.codewild.iconfontdemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.codewild.iconfontdemo.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <de.codewild.widgets.IconFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_diamonds"
        android:textSize="25sp"
        app:font_path="fonts/icomoon.ttf" />

    <de.codewild.widgets.IconFontView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:font_path="fonts/icomoon.ttf"
        app:glyph="@string/icon_diamonds"
        app:glyph_color="@color/material_deep_teal_500" />

</LinearLayout>